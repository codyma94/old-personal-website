<div class="blogpost" id="<%= blogpost.id %>">
  <h2 class="blogpost-title">
    <%= markdown(blogpost.title) %>
  </h2>
  <div class="blogpost-content">
    <%= markdown(blogpost.content) %>
  </div>

  <%= link_to "Delete", admin_blogpost_path(blogpost), method: "delete", data: { confirm: "You sure?" }%>
</div>
