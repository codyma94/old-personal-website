<div class="signin-container">
  <h2> Sign In </h2>

  <div class="signin-form">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.text_field :email, autofocus: true, class: "input-field", placeholder: "Email" %>

      <%= f.password_field :password, class: "input-field", placeholder: "Password" %>

      <%= f.submit "Login", class: "submit-button signin-submit"%>
    <% end %>
  </div>
</div>
